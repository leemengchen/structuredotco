<div class="panel-group" id="accordion">

    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag "category1.jpg", class:"img-circle img-responsive" %>
        <h4 class="panel-title">
          <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">Home Accessories</a>
        </h4>
      </div>
      <div id="collapseFour" class="panel-collapse collapse">
        <div class="panel-body text-center">
          <% @items.each do |item| %>
            <% if item.category_id == 1 %>
            <%image = item.image.url || "" %>
            <%= image_tag image, class:"img-responsive", width:"350px", height:"350px" %>
            <h4><%= item.title %></h4>
            <%= item.description %>
            <h5>RM<%= item.price %></h5>
            <%= link_to "Add To Cart", add_item_path(id: item, quantity: 1), method: :post, remote: true %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <%= image_tag "category2.jpg", class:"img-circle img-responsive" %>
        <h4 class="panel-title">
          <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseSeven">Arts & Craft</a>
        </h4>
      </div>
      <div id="collapseSeven" class="panel-collapse collapse">
        <div class="panel-body text-center">
          <% @items.each do |item| %>
            <% if item.category_id == 2 %>
            <%image = item.image.url || "" %>
            <%= image_tag image, class:"img-responsive", width:"200px", height:"200px" %>
            <h3><%= item.title %></h3>
            <h5><%= item.description %></h5>
            <h5>RM<%= item.price %></h5>
            <%= link_to "Add To Cart", add_item_path(id: item, quantity: 1), method: :post, remote: true %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

<!DOCTYPE html>
<html>

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Structuredotco</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://js.braintreegateway.com/js/braintree-2.28.0.min.js',
                                'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <%= render partial: 'partials/header' %>
    </div>
      <%= render partial: "partials/flash_messages" %>
      <%= render partial: "users/registrations/new" %>
      <%= render partial: "users/sessions/new" %>
      <div id="cart-container">
        <%= render partial: "cart/show", locals: { cart: carts_hash, item: @item } %>
      </div>
    <%= yield %>


  </body>
</html>

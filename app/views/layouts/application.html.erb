<!DOCTYPE html>
<html>

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Struturedotco</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <%= render partial: 'partials/header' %>
    </div>
      <%= render partial: "partials/flash_messages" %>
    <%= yield %>
  </body>

  <div id="user-widget">
  <% if current_user %>
    Welcome <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out",  destroy_user_session_path , id: "sign_out", method: :delete %>
  <% else %>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, id: "sign_in" %>
  <% end %>
  </div>
</html>

<div class = "container">
  <%= form_for(:payment,url: braintree_path, method: :post, html: {id: 'payment-form'}) do |f| %>
    <div class="form-group">
      <div id="dropin-container">
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Pay RM#{@total_price}", class: "btn-btn-success" %>
    </div>
    <% end %>
</div>


<script>
braintree.setup("<%= @token %>", "dropin", {
  container: "dropin-container",
  form: 'payment-form'
});
</script>


<div class="modal fade-modal-lg" id="cartmodal-modal-lg">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 class="modal-title">Your Cart</h3>
      </div>

      <div class="modal-body" id="cart-container">
         <%= render partial: "cart/modalbody", locals: { cart: carts_hash } %>
      </div>


        <form>
          <div class="form-group"> <!-- Full Name -->
          <%= form_for @order, url: orders_path do |f| %>
          <%= f.label :full_name, class: "control-label "%>
          <%= f.text_field :full_name, class: 'form-control', placeholder: "i am mc hammer" %>
      	  </div>


      	<div class="form-group"> <!-- Street 1 -->
          <%= f.label "Street Address 1", class: "control-label "%>
          <%= f.text_field :shipping_address, class: 'form-control', placeholder: "Street address, P.O. box, company name, c/o" %>
      	</div>

        <div class="form-group"> <!-- Street 2 -->
          <%= f.label "Street Address 2", class: "control-label "%>
          <%= f.text_field :shipping_address, class: 'form-control', placeholder: "Apartment, suite, unit, building, floor, etc." %>
        </div>

        <div class="form-group"> <!-- City -->
          <%= f.label "City", class: "control-label "%>
          <%= f.text_field :shipping_address, class: 'form-control', placeholder: "Smallville" %>
        </div>

        <div class="form-group"> <!-- State Button -->
        <%= f.select :shipping_address,options_for_select(["Penang", "Sabah", "Sarawak", "Selangor","Johor", "Malacca", "Perak", "Kedah","Terengganu","Pahang","Kelantan","Negeri Sembilan","Perlis"], selected: "shipping_address") %>
        </div>


        <div class="form-group"> <!-- Zip Code-->
          <%= f.label "zip_id", class: "control-label "%>
          <%= f.text_field :shipping_address, class: 'form-control', placeholder: "#####" %>
        </div>

    <% end %>

      </form>


      <div class="modal-footer">
        <button type="button" class="btn btn-default " data-dismiss="modal">Close</button>

          <%= link_to "BILLPLZ", billplz_path, method: :post, class: "btn btn-primary" %>
          <%= link_to "VISA/Mastercard", new_order_path, class: "btn btn-success" %>

      </div>

    </div>
  </div>
</div>

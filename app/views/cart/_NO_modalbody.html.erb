<div class="modal-body">
  <h5 class="text-center">Feel free to add more stuffs in your cart!</h5>
  <div class="table table-striped" id="tblGrid">
    <div id="tblHead">
      <div class='row'>
      <b>
        <div class="col-xs-3">Items</div>
        <div class="col-xs-3">Price</div>
        <div class="col-xs-3">Quantity</div>
        <div class="col-xs-3 text-right">Subtotal</div>
      </b>
      </div>
    </div>
  <tbody>
    <% if cart[:items] && cart[:items].length > 0 %>
      <% cart[:items].each do |item| %>
      <%= render partial: "cart/item", locals: {item: item} %>
      <%end%>
    <%end%>
  </tbody>
  </div>

  <div class=row>
    <div class='col-md-12'>
      <h3 style='text-align: right; font-weight: bold;'>
        Total Price

        <br>
        <div id="total-cart-price"> 
          <%= number_to_currency(cart[:total_price], :unit => 'RM') %>
        </div>
      </h3>
    </div>
  </div>
</div>
